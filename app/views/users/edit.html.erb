<% if flash[:notice]%>
<%= flash[:notice] %>
<% end %>


<h2>User info</h2>

<%= form_for(@user) do |f| %>

<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
	<h3><%= pluralize(@user.errors.count, "error") %>prohibited this user from being saved:</h3>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
    
<div class="form-group">
    <label>Name</label>
    </br>
    <%= f.text_field :name %>
    </div>
    
    <div class="form-group">
    <label>Image</label>
    </br>
    <%= f.attachment_field :profile_image, class: "user_image" %>
    </div>
    
    <div class="form-group">
    <label>introduction</label>
    </br>
      <%= f.text_area :introduction %>
</div>
    <%= f.submit 'Update User',class: "btn btn-secondary " %>

<% end %>

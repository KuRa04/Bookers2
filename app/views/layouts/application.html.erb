<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
<a class="navbar-brand" href="/">
          <span class="title" style="color:#ffffff;">Bookers</span>
   </a>   
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class ="navbar-nav ml-auto" >
    <% if user_signed_in? %>
    
  <li><%= link_to user_path(current_user),:style=>"color:white;" do%>
  <i class="fas fa-home"></i>
  <span> Home</span>
  <% end %></li>
  
    <li><%= link_to users_path,:style=>"color:white;" do%>
    <i class="fas fa-users"></i>
    <span> Users</span>
    <% end %></li>
    
   <li><%= link_to books_path,:style=>"color:white;" do%>
   <i class="fas fa-book-open"></i>
   <span> Books</span>
   <% end %></li>
   
  <li><%= link_to destroy_user_session_path,:style=>"color:white;", method: :delete do %>
  <i class="fas fa-sign-out-alt"></i>
  <span> logout</span>
  <% end %></li>
  
     <% else %>
   <li><%= link_to root_path,:style=>"color:white;" do%>
    <i class="fas fa-home"></i>
  <span> Home</span>
   <% end %></li>
   
   <li><%= link_to about_path,:style=>"color:white;" do%>
   <i class="fas fa-link"></i>
   <span> About</span>
   <% end %></li>
   
   <li><%= link_to  new_user_registration_path,:style=>"color:white;" do%>
   <i class="fas fa-user-plus"></i>
   <span> sign up</span>
   <% end %></li>
   
   <li><%= link_to new_user_session_path,:style=>"color:white;" do%>
   <i class="fas fa-sign-in-alt"></i>
   <span> login</span>
   <% end %></li>
   
    <% end %>
    </ul>
  </div>
  </div>
</nav>
</header>
    <p id="notice"><%= notice %></p> 
  
    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </body>
</html>

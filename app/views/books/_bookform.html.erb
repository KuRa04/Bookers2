

<h2>New book</h2>

<%= form_for(book) do |f| %>
    
<div class="form-group">
<label>Title</label>
</br>
<%= f.text_field :title, class: "col-xs-12" %>
</div>



 <div class="form-group">
<label>Opinion</label>
</br>
<%= f.text_area :body, class: "col-xs-12" %>
</div>



<div class="form-group">
<%= f.submit 'Create Book', class: "btn btn-success col-xs-12" %></br>
</div>


<% end %> 